<% if @projects.any? %>
	// Fill the right box with first project details in the list
  $('#div_project_show').html("<%= escape_javascript(render(:partial=>'show')) %>");
  $('#div_project_details').html("<%= escape_javascript(render(:partial=>'details')) %>");
	initPopovers();

	// Rendering the item list
	$('#div_project_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_project_drop_down').html("<%= escape_javascript(theme_drop_down(@projects, :name))%>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results_found')))%>";
	$('#div_project_index').html(noResultsText);
  $('#div_project_show').html(noResultsText);
	$('#div_project_details').html("");
<% end %>