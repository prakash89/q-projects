
<%# Displays list of @projects %>
<div id="div_project_collections">
	<% @projects.each do |project| %>
		<div id="div_project_<%= project.id %>">
			<%= render :partial=>"item", :locals=>{:project=>project} %>
		</div>
	<% end %>
	<% if @projects.blank? %>
		<div id="div_project_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @projects.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @projects, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
