<% if @clients.any? %>
	// Fill the right box with first client details in the list
	$('#div_client_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Rendering the item list
	$('#div_client_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_client_drop_down').html("<%= escape_javascript(theme_drop_down(@clients, :name)) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results_found')))%>";
	$('#div_client_index').html(noResultsText);
	$('#div_client_details').html(noResultsText);
<% end %>